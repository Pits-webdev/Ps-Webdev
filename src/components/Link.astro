---
const { BtnStyle, title, path } = Astro.props;
---

<a class=`link ${BtnStyle}` href={path}>{title}</a>

<script>
  const link = document.querySelectorAll(".link");

  link.forEach((element) => {
    let innerText = element.innerHTML;
    element.innerHTML = "";

    let textContainer = document.createElement("div");
    textContainer.classList.add("link_block");

    for (let char of innerText) {
      let span = document.createElement("span");
      span.innerText = char.trim() === "" ? "\xa0" : char;
      span.classList.add("char");

      textContainer.append(span);
    }

    /* add Container */
    element.appendChild(textContainer);
    element.appendChild(textContainer.cloneNode(true));
  });

  link.forEach((element) => {
    element.addEventListener("mouseover", () => {
      element.classList.remove("play");
    });
  });
</script>

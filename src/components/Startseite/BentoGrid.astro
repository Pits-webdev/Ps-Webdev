      <!-- card 5 -->
      <div
        class='order-4 laptop:order-5 w-full tablet:h-[360px] flex flex-col tablet:flex-row justify-between gap-5 col-span-2 ring-1 ring-borderLight bg-cardBg rounded-2xl p-5'
      >
        <div class='relative basis-2/5 flex flex-col justify-between'>
          <div class='grid_pattern absolute inset-0'></div>
          <div class=''>
            <h3 class='text-2xl mb-8'>Field of View</h3>

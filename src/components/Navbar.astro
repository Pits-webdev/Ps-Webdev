      <ul
        class='w-fit mx-auto flex gap-x-16 justify-center ring-1 ring-borderLight px-8 py-2 rounded-2xl'
      >
        <Link
          BtnStyle='text-white bg-background  py-1 rounded-2xl'
          title='Startseite'
          path='/'
        />
        <Link
          BtnStyle='text-white bg-background py-1 rounded-2xl '
          title='Leistungen'
          path='/leistungen'
        />
        <Link
          BtnStyle='text-white bg-background  py-1 rounded-2xl '
          title='Referenzen'
          path='/referenzen'
        />
        <Link
          BtnStyle='text-white bg-background  py-1 rounded-2xl '
          BtnStyleActive='text-accent bg-background  py-1 rounded-2xl'
          title='Ãœber mich'
          path='/ueber-mich'
        />

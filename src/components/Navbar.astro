    <button
      id='menu_btn'
      class='laptop:hidden w-16 h-8 flex flex-col items-end justify-center space-y-2 transition-all'
    >
      <span class='inline-block w-full h-[2px] bg-white'></span>
      <span class='inline-block w-3/5 h-[2px] bg-white'></span>

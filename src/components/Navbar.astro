  </nav>

  <MobileNav />
</header>

<style>
  .active :first-child {
    rotate: 45deg;
    width: 60%;
    transform: translateY(6px);
  }
  .active :last-child {
    rotate: -45deg;
    transform: translateY(-6px);
  }
</style>

